# ===== Spring Configuration =====
SPRING_PROFILES_ACTIVE=prod

# ===== Database Configuration =====
# NOTE: Using hosted PostgreSQL (not containerized)
# Provide your hosted database credentials below
SPRING_DATASOURCE_URL=jdbc:postgresql://your-hosted-db-host:5432/auth_service
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your_secure_password_here

# ===== JPA/Hibernate Configuration =====
DDL_AUTO=validate
SHOW_SQL=false
FORMAT_SQL=false

# ===== Google OAuth2 Configuration =====
# IMPORTANT: Replace with your actual Google OAuth2 credentials
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_OAUTH_SCOPE=email,profile
GOOGLE_REDIRECT_URI=http://localhost:8081/login/oauth2/code/google

# ===== JWT Configuration =====
JWT_PRIVATE_KEY=classpath:keys/private_key.pem
JWT_PUBLIC_KEY=classpath:keys/public_key.pem
JWT_EXPIRATION=86400000

# ===== OAuth2 Redirect Configuration =====
OAUTH2_REDIRECT_URI=http://localhost:5173/oauth2/redirect

# ===== Server Configuration =====
SERVER_PORT=8081
CONTEXT_PATH=

# ===== Logging Configuration =====
LOG_LEVEL=INFO
APP_LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=INFO
WEB_LOG_LEVEL=INFO

# ===== Docker Image Configuration =====
DOCKER_USERNAME=local
IMAGE_TAG=latest
